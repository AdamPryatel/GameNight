@{
}


<div class="box">
    <div class="content">
        <h3>Name: @Model.Name</h3>
        <p>Location: @Model.Location</p>
        <p>Date: @Model.PlayedOn</p>
    </div>
</div>

@foreach (var userEvent in Model.Attendees)
{
    <div>
        @userEvent.User.Username
    </div>
    <div>
        <a class="btn btn-primary" href ="/UserEvent/Delete/@userEvent.Id">Remove User From Event</a>
    </div>
}

<a class="btn btn-primary" href="/UserEvent/Create/?eventId=@Model.Id">Add User to Event</a>


