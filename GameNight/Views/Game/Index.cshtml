@model IEnumerable<GameNight.Models.Game>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<section>
    <form>
        <h2>Game Gallery</h2>
        <input id="search" type="search" placeholder="Search Game" />
        <button id="gameSearch">Submit</button>
    </form>
</section>


@foreach (var item in Model)
{
    <div class="box">
        <div class="content">
            <h3>Name: <a href="/Game/Details/@item.Id">@item.Title</a></h3>
            <a href="/Game/Update/@item.Id"><button id="editBtn">Edit Game</button></a> <a href="/Game/Delete/@item.Id"><button id="deleteBtn">Delete Game</button></a>
        </div>
    </div>
}

<h1><a href="/Game/Create"><button id="sendBtn">Add a game</button></a></h1>


@section scripts{
    <script src="~/js/getGame.js" asp-append-version="true"></script>
}